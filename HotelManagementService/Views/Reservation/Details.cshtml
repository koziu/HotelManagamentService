@using HotelManagementService.Models
@model ClientsReservationModels
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><b>Szczegóły</b></h3>
                    <hr />
                </div>
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Event.Reservation.Client.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Event.Reservation.Client.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Event.Reservation.Client.Surname)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Event.Reservation.Client.Surname)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Event.Reservation.Client.TaxId)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Event.Reservation.Client.TaxId)  
                        </dd>
                    </dl>
                    <hr/>
                    <table id="tableConf" class="display table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>
                                    @Html.DisplayName("Data przyjazdu")
                                </td>
                                <td>
                                    @Html.DisplayName("Data wyjazdu")
                                </td>
                                <td>
                                    @Html.DisplayName("Cena")
                                </td>
                                <td>
                                    @Html.DisplayName("Status rezerwacji")
                                </td>
                                <td>
                                    @Html.DisplayName("Nazwa pokoju")
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Event.Room.RoomName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Event.ReservationState)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Event.ArriveDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Event.DepatureDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Event.Price)
                                    </td>
                                </tr>
                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>
                                    @Html.DisplayName("Data przyjazdu")
                                </td>
                                <td>
                                    @Html.DisplayName("Data wyjazdu")
                                </td>
                                <td>
                                    @Html.DisplayName("Cena")
                                </td>
                                <td>
                                    @Html.DisplayName("Status rezerwacji")
                                </td>
                                <td>
                                    @Html.DisplayName("Nazwa pokoju")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <hr/>
                    <p>
                        @Html.ActionLink("Edytuj", "Edit", new {id = Model.Event.Id}, new {@class = "btn btn-danger"}) 
                        @Html.ActionLink("Powrót", "Index", null, new {@class = "btn btn-default"})
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    @Scripts.Render("~/bundles/jquery.dataTables")
    @Scripts.Render("~/bundles/jquery")
}