@model IEnumerable<HotelManagementService.Models.RegisterViewModel>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
              <div class="box" style="width: -moz-max-content;width: -webkit-max-content;width: max-content;">
                <div class="box-header">
                  <h3 class="box-title fa fa-odnoklassniki"> | <b>Pracownicy</b></h3>
                  <hr />
                  <p>@Html.ActionLink("Dodaj nowego pracownika", "Register", "Account", null, new { @class = "btn btn-danger", @align = "left" })</p>
                  <hr />
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="tableConf" class="display table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Name)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Surname)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.BrithDay)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Email)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Position)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model)
                      {
                        <tr>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.Name)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.Surname)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.BrithDay)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.Email)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.PhoneNumber)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.Employee.Position)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                          </td>
                          <td>
                            @Html.ActionLink("Edytuj", "Edit", new { id = item.Employee.Id }) |
                            @Html.ActionLink("Szczegóły", "Details", new { id = item.Employee.Id }) |
                            @Html.ActionLink("Usuń", "Delete", new { id = item.Employee.Id })
                          </td>
                        </tr>
                      }
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Name)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Surname)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.BrithDay)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Email)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.Employee.Position)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                        </th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>

            </div>
        </div>
    </section>
    @section scripts{
        @Scripts.Render("~/bundles/jquery.dataTables")
    }
